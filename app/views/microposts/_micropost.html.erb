<div id="<%= dom_id micropost %>">
  <p>
    <strong>Content:</strong>
    <%= micropost.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= micropost.user_id %>
  </p>

  <p>
    <strong>UserName: </strong>
    <% if micropost.user %>
      <%= micropost.user.name %>
    <% end %>
  </p>

</div>
